<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.Donor_Activity"
    android:background="@drawable/photo_2"
    tools:showIn="@layout/activity_donor">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnDonorViewReq"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="View blood request"
            android:background="@drawable/button_background"
            android:textColor="#fff"
            android:layout_marginBottom="4.0dip"/>
        <Button
            android:id="@+id/btnDonorViewCamp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="View campaign"
            android:background="@drawable/button_background"
            android:textColor="#fff"
            android:layout_marginBottom="4.0dip"/>
        <Button
            android:id="@+id/btnDonorUpdateDonation"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Update Donation"
            android:background="@drawable/button_background"
            android:textColor="#fff"
            android:layout_marginBottom="4.0dip"/>
        <Button
            android:id="@+id/btnDonorBloodReq"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Blood Request"
            android:background="@drawable/button_background"
            android:textColor="#fff"
            android:layout_marginBottom="4.0dip"/>
        <Button
            android:id="@+id/donorLogout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:background="@drawable/button_background"
            android:textColor="#fff"
            android:layout_marginBottom="4.0dip"/>
    </LinearLayout>

</RelativeLayout>